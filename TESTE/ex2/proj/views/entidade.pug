extends layout

block content
    .w3-container
    h1 Entidade
    table.w3-table-all
        tr
            th Designação
            th SIGLA
            th SIOE
            th Internacional
            th Estado
        tr
            td=ent.designacao
            td=ent.sigla
            td=ent.sioe
            td=ent.internacional
            td=ent.estado
    h2 Tipologias
    table.w3-table-all
        tr
            th Código
            th Sigla
            th Título
        each t in tipos
            tr
                td
                    a(href="http://clav.dglab.gov.pt/tipologias/"+t.id)=t.id
                td=t.designacao
                td=t.sigla
    h2 Intervenções Dono
    table.w3-table-all
        tr
            th Código
            th Título
        each i in dono
            tr
                td
                    a(href="http://clav.dglab.gov.pt/classes/consultar/c"+i.codigo)=i.codigo
                td=i.titulo
    h2 Intervenções Participativas
    table.w3-table-all
        tr
            th Código
            th Título
            th Tipo Par
        each j in part
            tr
                td
                    a(href="http://clav.dglab.gov.pt/classes/consultar/c" + j.codigo)=j.codigo
                td=j.titulo
                td=j.tipoPar
    address
        a(href="http://localhost:3000/") Voltar Atrás